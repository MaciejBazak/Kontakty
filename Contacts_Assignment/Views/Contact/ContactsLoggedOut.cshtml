@model Contacts_Assignment.Models.ContactViewModel


@{
    ViewData["Title"] = "Contacts";
}

<h1>List of All Contacts</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contacts[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts[0].TelephoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contacts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelephoneNumber)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ContactId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
